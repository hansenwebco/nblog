<% posts.forEach(function(post) { %>
  <div class="panel panel-default post">
    <div class="panel-heading">
      <div class="post-title"><span class="glyphicon glyphicon-th" aria-hidden="true"></span> <a href="/post/<%=post.$loki%>/<%=textHelpers.seoifyURL(post.postTitle)%>"><%=post.postTitle%></a></div>
    </div>
    <div class="panel-body">
      <p class="post-text"><%-textHelpers.readMore(post.postText,1000)%></p>
    </div>
    <div class="panel-footer">
      <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
      <span class="post-author">Posted by <%=post.postAuthor%></span>
      <span class="post-date"> on <%=moment(post.postDate).format("dddd, MMMM Do YYYY, h:mm A")%></span>
      <span class="post-tags pull-right"><%-partial('partials/tags', { 'postTags': post.postTags } ) %></span>
    </div>
  </div>
<% }); %>
