<% layout('layouts/main') -%>
<div class="row">
  <div class="col-md-12">
    <a class="btn btn-sm btn-primary pull-right" href="/manage/create-new-post">Create Post</a>
    <h1>Manage Blog</h1>
    <table class="table table-bordered table-stripped">
      <tr>
        <th>Post Title</th>
        <th>Post Date</th>
        <td>Options</th>
      </tr>
      <% posts.forEach(function(post) { %>
      <tr>
          <td><a href="manage/<%=post.$loki%>/<%=textHelpers.seoifyURL(post.postTitle)%>"><%=post.postTitle%></a></td>
          <td><%=moment(post.postDate).format("MM/d/YYYY, h:mm A")%></td>
          <th>options</th>
      </tr>
      <% }); %>
    </table>
  </div>
</div>
